{
  "extends": "@vue/tsconfig/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["esnext", "dom"],
    "paths": {
      "@/*": ["src/*"],
      "~/*": ["packages/*"],
      "vite-lib-starter": ["packages"]
    },
    "types": ["vitest/globals"]
  },
  "include": ["packages", "packages/.vitepress/**/*", "src"],
  "exclude": ["packages/.vitepress/dist"]
}
